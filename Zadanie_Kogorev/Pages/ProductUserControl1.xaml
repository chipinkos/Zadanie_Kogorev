<UserControl x:Class="Zadanie_Kogorev.Pages.ProductUserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Zadanie_Kogorev.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="350">
    <Border BorderBrush="Black" BorderThickness="1" Margin="10" Height="600" Width="345">
        <Grid Margin="1 0 -1 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <StackPanel Margin="10" Grid.RowSpan="4" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image x:Name="IconIMG" Source="\Resource\Заглушка.jpg" Width="200" Height="200"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="SaleTB" FontSize="30" Foreground="White" Background="#FF1FE199"/>
            </StackPanel>

            <TextBlock Margin="5" Grid.Row="4" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="3" HorizontalAlignment="Left"
            x:Name="ProductDescriptionTB" VerticalAlignment="Top" FontSize="20" TextWrapping="Wrap">Коментарии</TextBlock>

            <StackPanel Grid.Column="0" Grid.Row="6" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                <Image Source="\Resource\pngwing.com (8).png"
        Height="50" Width="35" HorizontalAlignment="Left"/>
                <TextBlock x:Name="ReviewTB" Foreground="Red" FontSize="20" VerticalAlignment="Center">Оценка</TextBlock>
            </StackPanel>
            
            <TextBlock Grid.Column="1" Grid.Row="6" Name="CountReviewTB" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"></TextBlock>

            <StackPanel Grid.Column="0" Grid.Row="7" Grid.RowSpan="1" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Left">
                <TextBlock Margin="10 0 0 0" x:Name="ProductPriceTB" Foreground="Black" FontSize="40">Цена</TextBlock>
            </StackPanel>

            <TextBlock Grid.Column="2" Grid.Row="7" Name="OldProductPriceTB" FontSize="20" TextDecorations="Strikethrough" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>

            <Button x:Name="DelBTN" Grid.Column="0" Grid.Row="8" Grid.RowSpan="2" Margin="5" Background="Red">
                    <Image Source="\Resource\pngwing.com (9).png" Height="75" Width="75"/>
                </Button>

            <Button x:Name="EditBTN" Grid.Column="1" Grid.Row="8" Grid.RowSpan="2" Margin="5">
                    <Image Source="\Resource\pngwing.com (11).png" Height="50" Width="50"/>
                </Button>

            <Button x:Name="AnalysBTN" Grid.Column="2" Grid.Row="8" Grid.RowSpan="2" Margin="5">
                    <Image Source="\Resource\статистика.png" Height="75" Width="75"/>
                </Button>

        </Grid>
    </Border>
</UserControl>
