<UserControl x:Class="Zadanie_Kogorev.Pages.ProductUserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Zadanie_Kogorev.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.RowSpan="4" Grid.ColumnSpan="3">
            <Image/>
        </StackPanel>
        
        <StackPanel Grid.Column="0" Grid.Row="4" Orientation="Horizontal" VerticalAlignment="Center">
            <Image Source="\Resource\pngwing.com (8).png"
        Height="50" Width="50" HorizontalAlignment="Left"/>
            <TextBlock Foreground="Red" FontSize="20" VerticalAlignment="Center">Рейтинг</TextBlock>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="5" Grid.RowSpan="1" Grid.ColumnSpan="2" VerticalAlignment="Center">
            <TextBlock Foreground="Black" FontSize="40">Цена</TextBlock>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="6" Grid.RowSpan="2" Grid.ColumnSpan="1" VerticalAlignment="Center">
            <Image Source="\Resource\pngwing.com (9).png"
        Height="100" Width="100"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="6" Grid.RowSpan="2" Grid.ColumnSpan="1" VerticalAlignment="Center">
            <Image Source="\Resource\pngwing.com (9).png"
        Height="100" Width="100"/>
        </StackPanel>
        
        <StackPanel Grid.Column="2" Grid.Row="6" Grid.RowSpan="2" Grid.ColumnSpan="1" VerticalAlignment="Center">
            <Image Source="\Resource\pngwing.com (9).png"
        Height="100" Width="100"/>
        </StackPanel>

    </Grid>
</UserControl>
